<div class="container">
    <div class="mt-3">
        <div class="row">
            <div class="col-md-8">
                <h2>Detail Contact</h2>
                <% if (!contact) { %>
                    <div class="alert alert-danger fw-bold" role="alert">
                        Data contact tidak ada. <br><a href="/contact" class="alert-link">&laquo; Kembali Ke Daftar Contact</a>
                    </div>
                <% } else { %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title"><%= contact.nama %></h5>
                      <h6 class="card-subtitle mb-2 text-muted"><%= contact.noHp %></h6>
                      <p class="card-text"><%= contact.email %></p>
                      <a href="/contact/edit/<%= contact.nama %>" 
                        class="btn btn-outline-info">Edit</a>
                      <!-- <a href="/contact/delete/ 
                        class="btn btn-outline-danger" onclick="return confirm('yakin?')">Hapus</a> -->
                        <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                            <input type="hidden" name="nama" value="<%= contact.nama %>">
                            <button type="submit" class="btn btn-outline-danger" 
                            onclick="return confirm('yakin?')">Hapus</button>
                        </form>
                      <a href="/contact" class="btn btn-outline-secondary">Kembali</a>
                    </div>
                    <% } %>
                </div>
            </div>
            
        </div>
    </div>
</div>